<%- include ../header.ejs %>

<div id="center">
    <div id="content">
        <div id="content-top">
            <div class="dialog">
                <div id="signin">
                    <% if(typeof(error) !== 'undefined' && error){ %>
                    <!--错误提示-->
                    <div class="error alert-error">
                        <p><%= error.msg %></p>
                    </div>
                    <% } else if (typeof (success) !== 'undefined' && success) { %>
                    <!--成功提示-->
                    <div class="success alert-success">
                        <p><%= success.msg %></p>
                    </div>
                    <% } %>
                    <!--登录表单-->
                    <form action="/signin" method="post" id="form-signin" class="form">
                        <!--用户账号-->
                        <input type="text" id="username" name="username"/>
                        <!--账号密码-->
                        <input type="password" id="password" name="password"/>
                        <!--注册提交按钮-->
                        <input type="submit" value="登录">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ../footer.ejs %>